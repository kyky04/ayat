<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber_800"
    tools:context="id.pragmainf.margie.Activities.SplashActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_below="@id/logo"
        android:textColor="@color/white"
        fontPath="fonts/montserrat_bold.ttf"
        android:padding="@dimen/spacing_large"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pencarian Ayat Al - Quran"
        />

    <TextView
        android:textColor="@color/white"
        fontPath="fonts/montserrat_bold.ttf"
        android:padding="@dimen/spacing_large"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UIN SUNAN GUNUNG DJATI BANDUNG"
        android:textStyle="bold"/>
</RelativeLayout>
